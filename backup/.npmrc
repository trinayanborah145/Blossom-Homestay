# Force npm to use package-lock.json
package-lock=true

# Ensure consistent dependency resolution
legacy-peer-deps=true
strict-peer-dependencies=false

# Improve installation performance
prefer-offline=true
prefer-frozen-lockfile=true

# Configure network settings
fetch-retries=3
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Security settings
strict-ssl=true

# Cache settings
cache-min=999999999
prefer-offline=true
prefer-online=false

# Logging
loglevel=warn
